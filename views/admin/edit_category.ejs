<h2 class="page-title">Edit a category</h2>
<a href="/admin/categories" class="btn btn-primary mx-2">Back to all categories</a>
<br /><br />

<form method="post" action="/admin/categories/edit_category/<%= id %>">
  <div class="form-group">
    <lable for="">Title</lable>
    <input
      type="text"
      class="form-control"
      name="title"
      value="<%=title %>"
      placholder="Title"
    />
  </div>

  <button class="btn btn-primary mx-2">Submit</button>
</form>

